<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/layout_questions"
    tools:context="iqtest.example.aden.iqtest.View_Questions"
    android:orientation="vertical"
    android:background="@drawable/temp_one">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="5"
            android:weightSum="100">

            <TextView
                android:id="@+id/qNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1"
                android:textStyle="bold"
                android:layout_marginLeft="90dp"
                android:textColor="#ff000000" />

            <TextView
                android:id="@+id/totalNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="15"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="/10"
                android:textStyle="bold"
                android:layout_marginRight="70dp"
                android:textColor="#ff000000" />

            <Button
                android:id="@+id/btn_home"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/home"
                android:layout_weight="10"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:layout_weight="25">

            <TextView
                android:id="@+id/timeRemaining"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Time Remaining : "
                android:textColor="#ff000000" />

        </LinearLayout>

    <!--fragment
        android:id="@+id/question"
        android:layout_weight="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <fragment
        android:id="@+id/answers"
        android:layout_weight="55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="20">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dip"
                    android:background="#e4a04511"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text=""
                    android:padding="5dp"
                    android:textColor="#ff000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dip"
                    android:background="#e4a04511"
                    android:layout_marginTop="5dp" />

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="55"
                android:weightSum="100">

                <RadioGroup
                    android:id="@+id/answers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#ff000000" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="3dip"
                    android:background="#e4a04511"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:text="Previous"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

                <Button
                    android:id="@+id/btn_next"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:text="Next"
                    android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="5"
            android:weightSum="5">

            <Button
                android:id="@+id/q1"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:background="@drawable/question_button_status"
                android:text="1"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/q2"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:background="@drawable/question_button_status"
                android:text="2"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/q3"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/question_button_status"
                android:text="3"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/q4"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/question_button_status"
                android:text="4"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/q5"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/question_button_status"
                android:text="5"
                android:textSize="30dp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="5"
            android:weightSum="5">

            <Button
                android:id="@+id/q6"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/question_button_status"
                android:text="6"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/q7"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/question_button_status"
                android:text="7"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/q8"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/question_button_status"
                android:text="8"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/q9"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/question_button_status"
                android:text="9"
                android:textSize="30dp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/q10"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/question_button_status"
                android:text="10"
                android:textSize="30dp"
                android:textColor="#ffffff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="5">


            <Button
                android:id="@+id/btn_finish"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:background="@drawable/button_status"
                android:text="FINISH"/>


        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>
