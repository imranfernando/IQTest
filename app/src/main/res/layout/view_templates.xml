<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/template_layout"
    tools:context="iqtest.example.aden.iqtest.View_Templates">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select a theme"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:weightSum="3">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="120dp"
            android:background="@drawable/temp_one"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:id="@+id/temp_one" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="120dp"
            android:background="@drawable/temp_two"
            android:layout_weight="1"
            android:id="@+id/temp_two" />

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="120dp"
            android:background="@drawable/temp_three"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:id="@+id/temp_three" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Default"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/textView5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Theme one"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="35dp"
            android:id="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Theme two"
            android:textSize="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:id="@+id/textView7" />

    </LinearLayout>

</LinearLayout>
