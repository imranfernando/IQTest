<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="iqtest.example.aden.iqtest.View_Marks"
    android:weightSum="100"
    android:background="@drawable/background">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="35dp"
                android:orientation="horizontal"
                android:layout_weight="46">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Results"
                    android:textSize="25sp"
                    android:textColor="#e46d320c"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:onClick="home"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/button_home"
                    android:background="@drawable/home"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="25">

                <ListView
                    android:id="@+id/marksView"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" >
                </ListView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="35">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/averageMark"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/position"
                    android:textColor="#000000"
                    android:text=""
                    android:textSize="15sp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/share"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:onClick="share"
                    android:textStyle="bold"
                    android:background="@drawable/fb_share_button_status" />

                <Button
                    android:id="@+id/tell_friend"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:onClick="tell_friend"
                    android:textStyle="bold"
                    android:background="@drawable/fb_invite_button_status" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loginError"
                    android:textColor="#000000"
                    android:text=""
                    android:textSize="15sp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"/>


            </LinearLayout>

</LinearLayout>
